{
    "manifest_version": 2,
    "name": "Foxxowo",
    "version": "1.0",
    "description": "Owoifies web pages",
    "icons": {
        "48": "icon.png"
    },
    "browser_action": {
        "default_title": "Owoify",
        "default_icon": "icon.png"
    },
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}
